<html lang="en">
{{> head}}
<style>

.sBox {
   width: 40%;
   margin: 100px auto;
}

.bigBox {
   min-height: 90%;
   position: relative;
   {{!-- padding-bottom: 50px; --}}
}

</style>
<body>
    {{> top}}

    <div class="container-fluid">
        <div class="jumbotron sBox row border rounded mx-auto shadow-lg"  style="position: relative; display: block;">
            <legend for="all" class="mx-auto">Enter the member</legend>
            <div class="col-sm-12">
                <form action="/admin/members/edit" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" placeholder="Place title here" name="name">
                    </div>
                    <div class="form-group">
                        <label for="rank">Rank</label>
                        <input type="text" class="form-control" placeholder="Member rank" name="rank">
                    </div>
                    <div class="form-group">
                        <label for="leader">Is a Leader</label>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="leader" value="true">
                                True
                            </label>
                        </div>
                        <div class="form-check">
                            <label class="form-check-label">
                                <input type="radio" class="form-check-input" name="leader" value="false">
                                False
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="picture">Picture</label>
                        <input type="file" class="form-control-file" name="picture">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    
</body>
</html>